<%- include("partials/header") -%>

<div class="container">
    <div class="border border-dark rounded-lg px-2 pb-16 box">
        <h2>Edit '<%= blog.title %>'</h2><br>
        <form action="/blogs/<%= blog._id %>?_method=PUT" method="post">
            <div class="form-group">
                <label for="exampleFormControlInput1">Title</label>
                <input type="text" class="form-control" id="exampleFormControlInput1" name="blog[title]"
                    value="<%= blog.title %>">
            </div>
            <div class="form-group">
                <label for="exampleFormControlInput2">Image</label>
                <input type="text" class="form-control" id="exampleFormControlInput2" name="blog[image]"
                value="<%= blog.image %>">
            </div>
            <div class="form-group">
                <label for="exampleFormControlTextarea1">Your Blog Post</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" name="blog[body]" rows="8"><%= blog.body %></textarea>
            </div>
            <input class="btn btn-outline-primary" type="submit">
        </form>
    </div>
</div>

<%- include("partials/footer") -%>