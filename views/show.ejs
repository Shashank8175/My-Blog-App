<%- include("partials/header") -%>

<div class="container">
    <div class="card align-items-center" style="max-width: 1208px;">

        <div class="row">
            <div class="col-md-12">
                <img src="<%= blog.image %>" class="card-img-top" alt="Image">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= blog.title %></h5>
                    <p class="card-text"><%= blog.body %></p>
                    <p class="card-text"><%= blog.created.toDateString() %></small></p>
                    <a href="/blogs/<%= blog._id %>/edit" class="btn btn-outline-success">Edit</a>
                    <form id="delete" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-outline-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<%- include("partials/footer") -%>