<%- include("partials/header") -%>

<div class="container move">
    <h1>My Blogs</h1>
    <% blogs.forEach(function(blog) { %>
        <div class="card mb-4" style="max-width: 720px;">
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img src="<%= blog.image %>" class="card-img" alt="Image">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= blog.title %></h5>
                        <p class="card-text"><%= blog.body.substring(0, 80) %>...</p>
                        <p class="card-text"><small class="text-muted"><%= blog.created.toDateString() %></small></p>
                        <a class="btn btn-success" href="/blogs/<%= blog._id %> ">Read More <i class="fas fa-chevron-right"></i></a>
                    </div>
                </div>
            </div>
        </div>
    <% }) %>
</div>


<%- include("partials/footer") -%>